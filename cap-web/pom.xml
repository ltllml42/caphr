<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>capsp</artifactId>
    <groupId>com.capinfo</groupId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>cap-web</artifactId>
  <name>cap-web Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <packaging>jar</packaging>

  <dependencies>

    <!--生成代码插件-->
    <dependency>
      <groupId>org.mybatis.generator</groupId>
      <artifactId>mybatis-generator-core</artifactId>
      <version>1.3.6</version>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <dependency>
      <groupId>com.capinfo</groupId>
      <artifactId>cap-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.capinfo</groupId>
      <artifactId>cap-sys</artifactId>
    </dependency>
    <dependency>
      <groupId>com.capinfo</groupId>
      <artifactId>cap-activiti</artifactId>
    </dependency>
    <dependency>
      <groupId>com.capinfo</groupId>
      <artifactId>cap-gen</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.capinfo</groupId>
      <artifactId>cap-demo</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>cap-web</finalName>

      <plugins>
        <plugin>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-maven-plugin</artifactId>
          <configuration>
            <fork>true</fork>
            <mainClass>com.capinfo.Application</mainClass>
            <layout>ZIP</layout>
          </configuration>
          <executions>
            <execution>
              <goals>
                <goal>repackage</goal>
              </goals>
            </execution>
          </executions>
  </plugin>
        <!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.6</version>
        </plugin>-->

      </plugins>
  </build>
</project>
